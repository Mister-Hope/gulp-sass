{
  "name": "@mr-hope/gulp-sass",
  "version": "3.0.2",
  "description": "Gulp plugin for sass",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.project.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "lint": "prettier --check --write . && eslint . --ext .ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Mister-Hope/gulp-sass"
  },
  "keywords": [
    "gulp-plugin",
    "sass",
    "gulp"
  ],
  "author": "Mr.Hope",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mister-Hope/gulp-sass/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "*",
    "chalk": "^4.1.2",
    "lodash": "^4.17.21",
    "plugin-error": "^1.0.1",
    "replace-ext": "^2.0.0",
    "sass": ">= 1.49.7",
    "strip-ansi": "^6.0.0",
    "vinyl-sourcemaps-apply": "^0.2.1"
  },
  "devDependencies": {
    "@types/globule": "1.1.4",
    "@types/gulp": "4.0.9",
    "@types/gulp-postcss": "8.0.2",
    "@types/gulp-sourcemaps": "0.0.35",
    "@types/gulp-tap": "^1.0.1",
    "@types/jest": "27.4.0",
    "@types/rimraf": "3.0.2",
    "@types/vinyl": "2.0.6",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "autoprefixer": "10.4.2",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "3.3.0",
    "del": "6.0.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "globule": "1.3.3",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sourcemaps": "3.0.0",
    "gulp-tap": "2.0.0",
    "jest": "27.4.5",
    "jest-environment-node-single-context": "27.2.0",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4",
    "vinyl": "2.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
