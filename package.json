{
  "name": "@mr-hope/gulp-sass",
  "version": "3.1.1",
  "description": "Gulp plugin for sass",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "clean": "rimraf dist",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "lint": "prettier --check --write . && eslint . --ext .ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .ts",
    "test": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Mister-Hope/gulp-sass"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "gulp-plugin",
    "sass",
    "gulp"
  ],
  "author": "Mr.Hope",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mister-Hope/gulp-sass/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/node": "*",
    "chalk": "^4.1.2",
    "plugin-error": "^2.0.1",
    "replace-ext": "^2.0.0",
    "sass": ">= 1.45.0",
    "source-map-js": "^1.0.2",
    "strip-ansi": "^6.0.1",
    "vinyl": "^2.2.1",
    "vinyl-sourcemaps-apply": "^0.2.1"
  },
  "devDependencies": {
    "@types/globule": "1.1.4",
    "@types/gulp": "4.0.10",
    "@types/gulp-postcss": "8.0.2",
    "@types/gulp-sourcemaps": "0.0.35",
    "@types/gulp-tap": "1.0.1",
    "@types/rimraf": "3.0.2",
    "@types/vinyl": "2.0.7",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vitest/coverage-c8": "0.25.7",
    "autoprefixer": "10.4.13",
    "c8": "7.12.0",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "3.3.0",
    "del": "6.1.1",
    "esbuild": "0.16.4",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "globule": "1.3.4",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sourcemaps": "3.0.0",
    "gulp-tap": "2.0.0",
    "postcss": "8.4.19",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "rollup": "3.7.3",
    "rollup-plugin-dts": "5.0.0",
    "rollup-plugin-esbuild": "5.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.0",
    "vitest": "0.25.7"
  },
  "packageManager": "pnpm@7.18.1",
  "publishConfig": {
    "access": "public"
  }
}
