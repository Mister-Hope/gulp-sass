{
  "name": "@mr-hope/gulp-sass",
  "version": "3.0.2",
  "description": "Gulp plugin for sass",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "lint": "prettier --check --write . && eslint . --ext .ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .ts",
    "test": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Mister-Hope/gulp-sass"
  },
  "keywords": [
    "gulp-plugin",
    "sass",
    "gulp"
  ],
  "author": "Mr.Hope",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mister-Hope/gulp-sass/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.184",
    "@types/node": "*",
    "chalk": "^5.0.1",
    "lodash": "^4.17.21",
    "plugin-error": "^2.0.0",
    "replace-ext": "^2.0.0",
    "sass": "^1.54.5",
    "source-map-js": "^1.0.2",
    "strip-ansi": "^7.0.1",
    "vinyl": "^2.2.1",
    "vinyl-sourcemaps-apply": "^0.2.1"
  },
  "devDependencies": {
    "@types/globule": "1.1.4",
    "@types/gulp": "4.0.9",
    "@types/gulp-postcss": "8.0.2",
    "@types/gulp-sourcemaps": "0.0.35",
    "@types/gulp-tap": "1.0.1",
    "@types/rimraf": "3.0.2",
    "@types/vinyl": "2.0.6",
    "@typescript-eslint/eslint-plugin": "5.34.0",
    "@typescript-eslint/parser": "5.34.0",
    "autoprefixer": "10.4.8",
    "c8": "7.12.0",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "3.3.0",
    "del": "7.0.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "globule": "1.3.4",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sourcemaps": "3.0.0",
    "gulp-tap": "2.0.0",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "typescript": "4.7.4",
    "vinyl": "2.2.1",
    "vite": "3.0.9",
    "vitest": "0.22.1"
  },
  "packageManager": "pnpm@7.9.3",
  "publishConfig": {
    "access": "public"
  }
}
